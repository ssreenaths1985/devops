version: '3.7'

services:
  {{ docker_service_name }}:
    image: {{ docker_hub_url }}/{{ image_name }}:{{ tag }}

    ports:
      - {{ host_port }}:{{ docker_port }}

    deploy:
      placement:
        constraints:
          - node.role == {{ var_docker_deploy_node_type }} 
      replicas: {{ replicas }}
      resources:
        reservations:
          memory: {{ reserved_memory }}
        limits:
          memory: {{ limited_memory }}
          cpus: '0.5'
      update_config:
        parallelism: 1
        delay: 0s
        failure_action: rollback
        order: start-first
      restart_policy:
        condition: on-failure
    networks:
      application_default:
        aliases:
          - {{ network_alias_name }}
    volumes:
      - {{ host_content_directory }}:{{ internal_cache_directory }}
      - /etc/localtime:/etc/localtime:ro
    env_file:
      - {{ env_file_deployment_location }}
networks:
  application_default:
    external: true
